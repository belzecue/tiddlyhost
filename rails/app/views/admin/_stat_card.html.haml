
.card{ class: [('big' if local_assigns[:big].present?), card_color(title, count, alert:)] }
  .card-body
    .big= number_with_precision(count, delimiter: ',', precision: 0)
    - if local_assigns[:total].present? && total != 0
      .medium= nice_percentage(count, total, precision: 0)
    .label= title
